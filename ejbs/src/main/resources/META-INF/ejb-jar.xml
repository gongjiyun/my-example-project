<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar id="ejb-jar_ID" version="2.1"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
	<enterprise-beans>
		<session>
			<description>user manager bean</description>
			<display-name>user manager bean</display-name>
			<ejb-name>UserManager</ejb-name>			
			<home>com.poc.business.ejb.UserManagerHome</home>
			<remote>com.poc.business.ejb.UserManager</remote>
			<ejb-class>com.poc.business.ejb.UserManagerBean</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>			
			<ejb-ref>
			    <description>this is only used in current bean.</description>
			    <ejb-ref-name>person</ejb-ref-name>
			    <ejb-ref-type>Entity</ejb-ref-type>
			    <home>com.poc.business.ejb.PersonHome</home>
			    <remote>com.poc.business.ejb.Person</remote>
			    <ejb-link>person</ejb-link>
			</ejb-ref>
			<resource-ref>
			    <res-ref-name>jdbc/poc</res-ref-name>
			    <res-type>javax.sql.DataSource</res-type>
			    <res-auth>Container</res-auth>
			</resource-ref>			
			<security-role-ref>
			    <role-name>administrator</role-name>
			    <role-link>admin</role-link>
			</security-role-ref>
			<!-- security-identity>
			    <run-as>
			        <role-name>admin</role-name>
			    </run-as>
			</security-identity -->
		</session>
		<session>
			<description>count</description>
			<display-name>count</display-name>
			<ejb-name>count</ejb-name>
			<home>com.poc.business.ejb.CountHome</home>
			<remote>com.poc.business.ejb.Count</remote>
			<ejb-class>com.poc.business.ejb.CountBean</ejb-class>
			<session-type>Stateful</session-type>
			<transaction-type>Container</transaction-type>
			<resource-ref>
			    <res-ref-name>jdbc/poc</res-ref-name>
			    <res-type>javax.sql.DataSource</res-type>
			    <res-auth>Container</res-auth>
			</resource-ref>	
		</session>
		<entity>
		    <description>person</description>
		    <display-name>person</display-name>
		    <ejb-name>person</ejb-name>
		    <home>com.poc.business.ejb.PersonHome</home>
		    <remote>com.poc.business.ejb.Person</remote>
		    <ejb-class>com.poc.business.ejb.PersonBean</ejb-class>
		    <persistence-type>Bean</persistence-type>
		    <prim-key-class>com.poc.business.ejb.PersonPK</prim-key-class>
		    <reentrant>false</reentrant>
		</entity>
		<entity>
		    <description>PersonEntity</description>
		    <display-name>PersonEntity</display-name>
		    <ejb-name>PersonEntity</ejb-name>
		    <home>com.poc.business.ejb.PersonEntityHome</home>
		    <remote>com.poc.business.ejb.PersonEntity</remote>
		    <ejb-class>com.poc.business.ejb.PersonEntityBean</ejb-class>
		    <persistence-type>Container</persistence-type>
		    <prim-key-class>java.lang.String</prim-key-class>
		    <reentrant>false</reentrant>
		    <cmp-version>2.x</cmp-version>
		    <abstract-schema-name>PersonEntityBean</abstract-schema-name>
		    <cmp-field>
		        <field-name>nric</field-name>
		    </cmp-field>
		    <cmp-field>
		        <field-name>name</field-name>
		    </cmp-field>
		    <cmp-field>
		        <field-name>email</field-name>
		    </cmp-field>
		    <primkey-field>nric</primkey-field>
		    <query>
		        <query-method>
		           <method-name>findPersonById</method-name>
		           <method-params>
		              <method-param>java.lang.String</method-param>
		           </method-params>
		        </query-method>
		        <ejb-ql>
		            <![CDATA[SELECT OBJECT(a) FROM PersonEntityBean AS a WHERE a.nric=?1]]>
		        </ejb-ql>
		    </query>

		</entity>
		<message-driven>
		    <display-name>MyMessageDriverBean</display-name>
		    <ejb-name>MyMessageDriverBean</ejb-name>
		    <ejb-class>com.poc.business.ejb.MyMessageDriverBean</ejb-class>
		    <transaction-type>Container</transaction-type>
		    <message-destination-type>javax.jms.Topic</message-destination-type>		    
		</message-driven>
	</enterprise-beans>
	<assembly-descriptor>
	    <!-- security config -->
	    <security-role>
	        <role-name>admin</role-name>
	    </security-role>
	    <method-permission>
	        <role-name>admin</role-name>
	        <method>
	            <ejb-name>UserManager</ejb-name>
	            <method-name>getUserByUserId</method-name>
	            <method-params>
	                <method-param>java.lang.String</method-param>
	            </method-params>
	        </method>
	    </method-permission>
	    <!-- transaction config -->
		<container-transaction>
			<method>
				<ejb-name>UserManager</ejb-name>
				<method-name>*</method-name>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>count</ejb-name>
				<method-name>*</method-name>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>person</ejb-name>
				<method-name>updatePerson</method-name>
				<method-params>
				   <method-param>java.lang.String</method-param>
				   <method-param>java.lang.String</method-param>
				   <method-param>java.lang.String</method-param>
				   <method-param>java.lang.String</method-param>
				</method-params>
			</method>
			<trans-attribute>RequiresNew</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>PersonEntity</ejb-name>
				<method-name>*</method-name>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
	</assembly-descriptor>
</ejb-jar>
